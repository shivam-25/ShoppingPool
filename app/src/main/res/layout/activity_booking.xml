<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BookingActivity">

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <ImageView


        android:layout_below="@id/main_page_toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/itemDetailImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/photo" />

    <TextView

        android:id="@+id/itemDetailDiscountedPriceText"
        android:layout_below="@id/main_page_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/itemDetailImage"
        android:layout_marginTop="20dp"
        android:text="RM XXX "
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/Red"/>

    <TextView

        android:id="@+id/itemDetailDiscountPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/itemDetailImage"
        android:background="@drawable/red_circle"
        android:padding="3dp"
        android:text="-XX% off "
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/White"
        android:layout_below="@+id/itemDetailDiscountedPriceText"/>
    <TextView

        android:id="@+id/itemDetailPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/itemDetailDiscountPriceText"
        android:text="RM XXX "
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/transparentBlack"
        android:layout_below="@+id/itemDetailDiscountedPriceText"/>

    <TextView
        android:id="@+id/itemDetailQuantityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/itemDetailImage"
        android:layout_below="@id/itemDetailDiscountPriceText"
        android:textColor="@color/transparentBlack"
        android:text="Stock: "
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/itemDetailQuantityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/itemDetailQuantityLabel"
        android:layout_below="@id/itemDetailDiscountPriceText"
        android:text="14unit"
        android:textColor="@color/transparentBlack"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <View
        android:id="@+id/lineBelowImage"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_below="@+id/itemDetailImage"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/variationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"

        android:layout_below="@id/lineBelowImage"
        android:textColor="@color/darkTransparentBlack"
        android:text="Choose Item Variant: "
        android:textStyle="bold"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/variationLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/variationLabel"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/bookVariant1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/my_button_bg"
            android:text="S"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bookVariant2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/my_button_bg"
            android:text="S"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bookVariant3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/my_button_bg"
            android:text="S"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bookVariant4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/my_button_bg"
            android:text="S"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/variationLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/variationLayout1"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/bookVariant5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/my_button_bg"
            android:layout_marginEnd="5dp"
            android:text="S"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bookVariant6"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/my_button_bg"
            android:text="S"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bookVariant7"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/my_button_bg"
            android:text="S"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bookVariant8"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/my_button_bg"
            android:text="S"
            android:padding="2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

    </LinearLayout>



    <View
        android:id="@+id/lineBelowRecycleView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/variationLayout2"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/itemOrderquantityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/lineBelowRecycleView"
        android:layout_marginBottom="20dp"
        android:textColor="@color/darkTransparentBlack"
        android:text="Quantity: "
        android:textStyle="bold"
        android:textSize="22sp"/>

    <LinearLayout
        android:id="@+id/quantityOrderLinearLayout"
        android:layout_below="@+id/lineBelowRecycleView"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="65dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttondecreaseQtyBut"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="-"
            android:textColor="@color/White"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/selectedQuantity"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="1"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/increaseQtyBut"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="+"
            android:textColor="@color/White"
            android:textSize="30sp" />

    </LinearLayout>
    <View
        android:id="@+id/lineBelowQuantityOrder"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/itemOrderquantityLabel"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:id="@+id/checkoutLinear"
        android:layout_below="@+id/lineBelowQuantityOrder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/confirmAddToCart"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Book this product"
            android:backgroundTint="@color/orange"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            />
        <Button
            android:id="@+id/checkoutNowButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Book and pay"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/scarletRed"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:id="@+id/applyForLoan"
        android:layout_below="@+id/checkoutLinear"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp">

        <RelativeLayout
            android:id="@+id/loanButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/loanText"
                android:layout_centerHorizontal="true"
                android:src="@drawable/fullerton_india_logo" />

            <TextView
                android:id="@+id/loanText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Proceed To Loan Application"
                android:textSize="15dp"
                android:textColor="@color/darkTransparentBlack"
                android:textAlignment="center" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>